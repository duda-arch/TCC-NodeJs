<%- include('partials/header.ejs')%>
<div  id="SOME" class="container">
  <%if(alert.status){ %>
    <div class="alert alert-<%= alert.style%> alert-dismissible fade show" role="alert">
      <strong><%= alert.msg%> 
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

 <% }%>
    <h2 class="AdminTitle" >Add Products</h2>
    <div  class="row ">
        <form  id="SOME" action="/admin" class="products" method="POST" enctype="multipart/form-data" >
            <div class="row">
              <div class="col">
                  <h4>Name</h4>
                <input type="text" class="form-control" name="name" placeholder="Name">
              </div>
              <div class="col">
                  <h4>Price</h4>
                <input type="number" class="form-control" step="any" name='price' placeholder="Price">
              </div>
              <div class="col">
                  <h4>Description</h4>
                <input type="text" class="form-control" name='description' placeholder="Description">
              </div>
              <div class="col">
                  <h4>Slug</h4>
                <select class="custom-select mr-sm-2"  name="slug">
                    <option selected>Escolher...</option>

                      <%result.forEach((slug,index) =>{ %>

                        <option value="<%= slug %>"><%= slug%></option>
                    <%  })%>

               
                  </select>
              </div>
          
              <div class="col">
                  <h4>Image</h4>
                  <input type="file" name="file" id="">
              </div>
            </div>
            <button  style="margin-top: 10px;" class="btn btn-warning">Send</button>
        </form>
        <hr>
  
        <form id="SOME" action="/create" method="post">
          <h2 class="AdminTitle" >Create Slug</h2>
            <input style="display: inline;" id="slg" name="slg" class="form-control" placeholder="Create Slug" type="text">
           <a href="/admin"> <button class="btn btn-warning" type="submit"><img src="/img/ferramentas.png" alt="" srcset=""></button></a>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
      <div  class="col mt-4 mb-4 ">

        <div class="btn-group" role="group" aria-label="Basic example">
          <p class="lead">

         
          <button style="margin-left: 30px;" id="button" class="btn btn-dark" onclick="myFunction()">Editar Produtos <span style="font-size: 15px; color: red;"> edição rapida  </span> </button>
          
        </p>
          <form action="/EditProductsID" method="post">

            <select style="margin-left: 75%;" class="btn btn-dark "  onchange="this.form.submit()"  name="slug">
              <option selected>Escolher Slug ...</option>

                <%result.forEach((slug,index) =>{ %>

                  <option value="<%= slug %>"><%= slug%></option>
              <%  })%>

         
            </select>

          </form>

        </div>
     </div>
   </div>
</div>



<div style="visibility: hidden;  " id="pdr" class="editProducts">

    
     <%- include('partials/EditProducts.ejs')%>

</div>
<script>
  function myFunction() {

    if(document.getElementById("SOME").style.visibility == "hidden"){
      document.getElementById("pdr").style.visibility = "hidden"
      document.getElementById("SOME").style.visibility = "visible"
      document.getElementById("button").innerText = "Lista de Produtos"  
    }else{
      document.getElementById("SOME").style.visibility = "hidden"
      document.getElementById("pdr").style.visibility = "visible"
      document.getElementById("button").innerText = "Criar Produtos"

    }

    if(document.getElementById("SOME").style.display == "none"){
      document.getElementById("SOME").style.display = ""
    }else{
      document.getElementById("SOME").style.display = "none"
    }

  }
  </script>


</script>
<style>
    .products{
      margin-top: 10px;
      margin-left: 10px;
      padding: 30px;
    }
    .AdminTitle{
        text-align: center;
        padding: 10px;
        background-color: #B0C4DE;
    }
</style>
